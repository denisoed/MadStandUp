{
    "manifest_version": 2,
    "name": "StandUpMan",
    "description": "Write stand-ups quickly",
    "version": "0.0.8",
    "author": "Denisoed",
    "browser_action": {
        "default_icon": "img/s.png",
        "default_title": "StandUpMan",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["scripts/background.js"],
        "persistent": false
    },
    "permissions": [
        "tabs",
        "notifications",
        "http://*/*",
        "https://*/*"
    ]
}